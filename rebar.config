% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  {lager, "~>3.2.0"},
  {qdate, "~>0.4.2"},
  {dproto, "~>0.1.25"},
  %{mmath, "~>0.2.0"},
  {mmath, {git, "https://github.com/dalmatinerdb/mmath", {branch, "main"}}},
  {hdr_histogram, "~>0.2.0"},
  {dflow, "~>0.1.0"},
  {dqe_fun, "~>0.1.11"},
  {dqe_idx, "~>0.2.0"},
  {dqe_idx_ddb, "~>0.2.0"},
  {dqe_idx_pg, "~>0.3.0"},
  {ddb_connection, "~>0.1.7"}
 ]}.

{profiles,
 [{lint,  [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "0.1.6"}}}]}]},
  {shell, [{deps, [sync]}]},
  {eqc,   [{deps, [meck]}, {plugins, [rebar3_eqc]},
           {erl_opts, [{d, 'TEST'}, debug_info, warnings_as_errors, {parse_transform, lager_transform}]}]}]}.

{shell, [{apps, [dqe]}]}.
{xref_checks, [undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.

{dialyzer, [{warnings, [underspecs]}]}.
